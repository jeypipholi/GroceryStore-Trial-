@model GroceryStore.Models.Supplier

@{
    ViewData["Title"] = "Add Supplier";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 w-50">
        <h2 class="text-center text-primary mb-4">Add Supplier</h2>
        <form asp-action="AddSupplier" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control border-primary" placeholder="Enter Supplier Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contact" class="form-label fw-bold"></label>
                <input asp-for="Contact" class="form-control border-primary" placeholder="Enter Contact Number" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-50 shadow-sm">Add Supplier</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
